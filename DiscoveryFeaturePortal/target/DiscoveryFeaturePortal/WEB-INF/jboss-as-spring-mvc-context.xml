<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
                           http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd">

	<context:component-scan base-package="com.discovery.feature.portal.mvc.controller" />
	
	<context:component-scan base-package="com.discovery.feature.portal.mvc.rest.controller"/>
	
	<context:component-scan base-package="com.discovery.feature.portal.mvc.dao.impl" />
	<context:component-scan base-package="com.discovery.feature.portal.mvc.dao" />

	<!-- 	bean necesario para el utilizo de anotaciones  PostConstruct y PreDestroy -->
	<bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"> </bean>
	
	
	<bean class="org.springframework.beans.factory.config.CustomScopeConfigurer">
		<property name="scopes">
			<map>
				<entry key="session">
					<bean class="org.springframework.context.support.SimpleThreadScope" />
				</entry>
			</map>
		</property>
	</bean>

	<mvc:annotation-driven />

	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/views/" />
<!-- 		<property name="suffix" value=".jsp" /> -->
		<property name="suffix" value=".html" />
	</bean>

	<mvc:resources mapping="/static/**" location="/" />

	<mvc:default-servlet-handler />

</beans>
